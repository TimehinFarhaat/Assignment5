@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" />


    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- ☰ Toggle button for all screens below 1200px -->
    <button id="toggleSidebar" class="btn btn-primary d-xl-none position-fixed" style="top: 15px; left: 15px; z-index: 2000;">
        ☰ Menu
    </button>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar bg-dark text-white">
        <div class="p-3 d-flex flex-column bg-dark text-white">
            <h4 class="text-warning text-center mb-4">Dashboard</h4>
            <a href="/Home/Index" class="nav-link text-warning">🏠 Home</a>
            <a href="/Home/About" class="nav-link text-warning">👤 About</a>
            <a href="/Home/Resume" class="nav-link text-warning">📄 Resume</a>
            <a href="/Home/Projects" class="nav-link text-warning">💼 Projects</a>
            <a href="/Home/Contact" class="nav-link text-warning">✉️ Contact</a>
            <a href="/Gallery/Index" class="nav-link text-warning">📸 Upload Your Favourites</a>
            <a href="/Tax/CalculateTax" class="nav-link text-warning">💰 Calculate Your Tax</a>
            <a href="/Currency/Index" class="nav-link text-warning">💱 Currency Converter</a>


        </div>
    </div>

    <!-- Main content -->
    <div id="mainContent" class="content p-4">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggleBtn = document.getElementById("toggleSidebar");
        const sidebar = document.getElementById("sidebar");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("active");
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>


